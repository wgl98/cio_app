<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.mine.member.MineMemberApproveActivity"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:id="@+id/mine_member_approve_page_title"
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:layout_height="44dp">

        <LinearLayout
            android:id="@+id/btn_back_in_mine_member_approve_page_layout"
            android:layout_width="88dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_back_in_mine_member_approve_page"
                android:layout_width="12dp"
                android:layout_height="20.5dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/btn_back"
                android:layout_marginLeft="13dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/mine_member_approve_page_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="17sp"
            android:textColor="#000000"
            android:text="会员认证"/>
    </RelativeLayout>
    
    <ImageView
        android:layout_width="155.06dp"
        android:layout_height="112.77dp"
        android:background="@mipmap/tag_no_approve"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="155dp"/>

    <TextView
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="26dp"
        android:gravity="center"
        android:textColor="#66444444"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="您还未进行会员认证
        认证后才可开放部分功能"/>

    <Button
        android:id="@+id/btn_approve_in_mine_member_approve_page"
        android:layout_width="157dp"
        android:layout_height="44dp"
        android:layout_marginTop="51dp"
        android:background="@mipmap/btn_submit_demand_blue_background"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:text="开始认证"/>

    <TextView
        android:id="@+id/tv_member_move_in_mine_member_approve_page"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="17dp"
        android:textColor="@color/colorBlack"
        android:gravity="center"
        android:textSize="13sp"
        android:text="如您是已认证会员企业新的对接用户，可进行企业账号转移"/>



</LinearLayout>