<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.mine.member.MoveMemberApproveActivity"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:id="@+id/move_member_approve_page_title"
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:layout_height="44dp">

        <LinearLayout
            android:id="@+id/btn_back_in_move_member_approve_page_layout"
            android:layout_width="88dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_back_in_move_member_approve_page"
                android:layout_width="12dp"
                android:layout_height="20.5dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/btn_back"
                android:layout_marginLeft="13dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/move_member_approve_page_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="17sp"
            android:textColor="#000000"
            android:text="企业认证转移"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/move_member_approve_page_title"
        android:layout_above="@id/move_member_approve_page_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/colorBlack"
                android:text="单位名称"/>

            <EditText
                android:id="@+id/move_member_approve_page_company"
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:layout_marginLeft="17dp"
                android:background="@null"
                android:layout_marginTop="3dp"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:text="东莞市绿灯网络科技有限公司"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/colorBlack"
                android:text="营业执照"/>

            <ImageView
                android:id="@+id/move_member_approve_page_license"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="281dp"
                android:maxHeight="157dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="17dp"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/move_member_approve_page_add_license"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="17dp"
                android:background="@mipmap/tag_add_license"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/colorBlack"
                android:text="转移原因"/>

            <RelativeLayout
                android:layout_width="352dp"
                android:layout_height="170dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="12dp"
                android:background="@mipmap/demand_submit_main_content_layout_background">

                <EditText
                    android:id="@+id/move_member_approve_page_reason"
                    android:layout_width="328dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_centerHorizontal="true"
                    android:hint="请输入转移原因。"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp"
                    android:maxLength="150"/>

                <TextView
                    android:id="@+id/move_member_approve_page_reason_text_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="0/150"
                    android:textSize="13sp"
                    android:textColor="#661E1E1E"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="12dp"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:id="@+id/move_member_approve_page_bottom"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="3dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_move_member_approve_page_save"
            android:layout_width="156dp"
            android:layout_height="45dp"
            android:text="完成"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorWhite"
            android:textSize="17sp"
            android:gravity="center"
            android:background="@drawable/shape_demand_submit_button_background" />
    </LinearLayout>

</RelativeLayout>