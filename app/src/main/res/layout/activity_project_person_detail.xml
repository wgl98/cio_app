<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.project.projectDetail.projectPerson.ProjectPersonDetailActivity"
    android:background="@color/colorWhite"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/project_person_detail_title"
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:layout_height="44dp">

        <LinearLayout
            android:id="@+id/btn_back_in_project_person_detail_layout"
            android:layout_width="88dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_back_in_project_person_detail"
                android:layout_width="12dp"
                android:layout_height="20.5dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/btn_back"
                android:layout_marginLeft="13dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/project_person_detail_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="17sp"
            android:textColor="#000000"
            android:text="服务详情"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginTop="44dp"
        android:orientation="horizontal">
        
        <View
            android:layout_width="3dp"
            android:layout_height="24dp"
            android:background="@color/colorBlue"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="21dp"/>

        <TextView
            android:id="@+id/project_person_content_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:text="张三"
            android:textSize="24sp"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/project_person_content_detail_profession"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:text="UI设计工程师"
                android:gravity="center"
                android:layout_marginLeft="10dp" />
            
            <View
                android:layout_width="1dp"
                android:layout_height="11dp"
                android:background="@color/colorGray"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"/>

            <TextView
                android:id="@+id/project_person_content_detail_experience"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:text="1年经验"
                android:layout_marginLeft="8dp" />

        </LinearLayout>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="服务类别："
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/project_person_content_detail_service_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="软件开发"
            android:textColor="@color/colorBlack"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="21dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="服务内容："
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/project_person_content_detail_service_content"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="1、负责产品移动端、web端、pc端相关产品线的视觉和交互设计，把控整体设计质量和规划设计方向；"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <View
            android:layout_width="306dp"
            android:layout_height="1dp"
            android:background="#E9E9E9"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

</LinearLayout>