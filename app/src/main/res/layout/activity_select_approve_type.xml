<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.mine.member.SelectApproveTypeActivity"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:id="@+id/select_approve_type_page_title"
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:layout_height="44dp">

        <LinearLayout
            android:id="@+id/btn_back_in_select_approve_type_page_layout"
            android:layout_width="88dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_back_in_select_approve_type_page"
                android:layout_width="12dp"
                android:layout_height="20.5dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/btn_back"
                android:layout_marginLeft="13dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/select_approve_type_page_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="17sp"
            android:textColor="#000000"
            android:text="会员认证"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="21dp"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:text="请选择您要进行认证的身份"/>

    <RelativeLayout
        android:id="@+id/tag_company_approve_type"
        android:layout_width="307dp"
        android:layout_height="132dp"
        android:layout_marginTop="42dp"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/member_approve_background">
        
        <ImageView
            android:layout_width="63.83dp"
            android:layout_height="74.12dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            android:background="@mipmap/tag_company_member_approve"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:textSize="23sp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="51dp"
            android:text="企业认证"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tag_person_approve_type"
        android:layout_width="307dp"
        android:layout_height="132dp"
        android:layout_marginTop="28dp"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/member_approve_background">

        <ImageView
            android:layout_width="63.83dp"
            android:layout_height="74.12dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            android:background="@mipmap/tag_person_member_approve"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:textSize="23sp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="51dp"
            android:text="个人认证"/>

    </RelativeLayout>

</LinearLayout>