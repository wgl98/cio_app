<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.mine.member.companyApproveInformation.CompanyMessageInformationFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="14dp"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="企业介绍："/>

    <TextView
        android:id="@+id/approve_company_information_message_content_name"
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:textColor="@color/colorBlack"
        android:textSize="15sp"
        android:text="东莞市绿灯1网络科技"/>
    
    <LinearLayout
        android:layout_width="334dp"
        android:layout_height="21dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="企业介绍："/>

        <TextView
            android:id="@+id/approve_company_information_message_content_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:text="BI/大数据管理与分析"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="334dp"
        android:layout_height="21dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="年营业额（万元）："/>

        <TextView
            android:id="@+id/approve_company_information_message_content_profit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:text="100万元"/>


    </LinearLayout>

</LinearLayout>