<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/conference_title_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RadioGroup
            android:id="@+id/conference_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/conference_title_signing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:button="@null"
                android:text="报名中"
                android:gravity="center"
                android:textColor="@color/title_text_color"
                android:textSize="15sp"
                android:paddingBottom="5dp"
                android:background="@drawable/conference_title_selected_background"
                android:checked="true"
                android:textStyle="bold"
                />

            <RadioButton
                android:id="@+id/conference_title_handing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:button="@null"
                android:text="进行中"
                android:gravity="center"
                android:textColor="@color/title_text_color"
                android:textSize="15sp"
                android:paddingBottom="5dp"
                android:background="@drawable/conference_title_selected_background"
                android:textStyle="bold"
                />

            <RadioButton
                android:id="@+id/conference_title_finish"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:button="@null"
                android:text="已结束"
                android:gravity="center"
                android:textColor="@color/title_text_color"
                android:textSize="15sp"
                android:paddingBottom="5dp"
                android:background="@drawable/conference_title_selected_background"
                android:textStyle="bold"
                />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/conference_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/conference_title_layout"
        android:orientation="vertical">
    </LinearLayout>

</RelativeLayout>
