<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="138.33dp"
        android:layout_height="121.38dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="159dp"
        android:background="@mipmap/tag_member_approve_success"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="19sp"
        android:textColor="#4BD59D"
        android:text="认证成功!"/>

    <Button
        android:id="@+id/btn_look_approve_information"
        android:layout_width="157dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="87dp"
        android:background="@mipmap/btn_submit_demand_blue_background"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/colorWhite"
        android:text="查看认证信息"/>

</LinearLayout>
