<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <ScrollView
        android:layout_width="341dp"
        android:layout_height="match_parent"
        android:layout_above="@id/project_company_submit_second_bottom"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:textSize="17sp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:text="产品介绍"/>

            <EditText
                android:id="@+id/project_company_submit_content_produce_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="15dp"
                android:hint="请输入产品介绍"
                android:background="@null" />

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/project_company_submit_second_bottom"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="3dp">

        <Button
            android:id="@+id/btn_project_company_submit_second_to_first"
            android:layout_width="156dp"
            android:layout_height="45dp"
            android:text="上一步"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorWhite"
            android:textSize="17sp"
            android:gravity="center"
            android:layout_toLeftOf="@id/center_view_in_project_company_submit"
            android:background="@drawable/shape_demand_submit_button_background" />

        <View
            android:id="@+id/center_view_in_project_company_submit"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/btn_project_company_submit_second_to_third"
            android:layout_width="156dp"
            android:layout_height="45dp"
            android:text="下一步"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorWhite"
            android:textSize="17sp"
            android:gravity="center"
            android:background="@drawable/shape_demand_submit_button_background"
            android:layout_toRightOf="@id/center_view_in_project_company_submit"
            android:enabled="false"/>
    </RelativeLayout>

</RelativeLayout>
