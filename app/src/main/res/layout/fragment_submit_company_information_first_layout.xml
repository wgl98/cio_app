<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="单位名称"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:gravity="center" />

        <EditText
            android:id="@+id/company_information_submit_content_unit"
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:background="@null"
            android:hint="请输入单位名称"
            android:layout_marginTop="3dp"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"/>

        <View
            android:layout_width="341dp"
            android:layout_height="1dp"
            android:background="#66707070"
            android:layout_marginTop="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="单位地址"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:gravity="center" />

        <EditText
            android:id="@+id/company_information_submit_content_address"
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:background="@null"
            android:hint="请输入单位地址"
            android:layout_marginTop="3dp"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"/>

        <View
            android:layout_width="341dp"
            android:layout_height="1dp"
            android:background="#66707070"
            android:layout_marginTop="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="企业类型"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:layout_marginTop="10dp"/>

        <RelativeLayout
            android:id="@+id/company_information_submit_content_type_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">

            <TextView
                android:id="@+id/company_information_submit_content_type"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:hint="请选择企业类型"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_alignParentRight="true"
                android:text="选择"
                android:textColor="@color/colorBlue"
                android:textSize="15sp"/>

        </RelativeLayout>

        <View
            android:layout_width="341dp"
            android:layout_height="1dp"
            android:background="#66707070"
            android:layout_marginTop="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="单位对接主负责人姓名"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:gravity="center" />

        <EditText
            android:id="@+id/company_information_submit_content_name"
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:background="@null"
            android:hint="请输入真实姓名"
            android:layout_marginTop="3dp"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"/>

        <View
            android:layout_width="341dp"
            android:layout_height="1dp"
            android:background="#66707070"
            android:layout_marginTop="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="单位对接主负责人职务"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:gravity="center" />

        <EditText
            android:id="@+id/company_information_submit_content_position"
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:background="@null"
            android:hint="请输入负责人职务"
            android:layout_marginTop="3dp"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"/>

        <View
            android:layout_width="341dp"
            android:layout_height="1dp"
            android:background="#66707070"
            android:layout_marginTop="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="单位对接主负责人手机号"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:gravity="center" />

        <EditText
            android:id="@+id/company_information_submit_content_phone"
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:background="@null"
            android:hint="请输入11位有效号码"
            android:layout_marginTop="3dp"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"/>

        <View
            android:layout_width="341dp"
            android:layout_height="1dp"
            android:background="#66707070"
            android:layout_marginTop="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="单位对接主负责人邮箱"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:gravity="center" />

        <EditText
            android:id="@+id/company_information_submit_content_email"
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:background="@null"
            android:hint="请输入单位负责人邮箱"
            android:layout_marginTop="3dp"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"/>

        <View
            android:layout_width="341dp"
            android:layout_height="1dp"
            android:background="#66707070"
            android:layout_marginTop="4dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/company_information_submit_first_bottom"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_company_information_submit_first_to_second"
            android:layout_width="156dp"
            android:layout_height="45dp"
            android:text="下一步"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorWhite"
            android:textSize="17sp"
            android:gravity="center"
            android:background="@drawable/shape_demand_submit_button_background"
            android:enabled="false"/>
    </LinearLayout>

</RelativeLayout>
