<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="118dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorWhite">

        <ImageButton
            android:id="@+id/mine_person_service_item_delete_tag"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@mipmap/tag_item_no_select_delete"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"/>

        <LinearLayout
            android:layout_toRightOf="@id/mine_person_service_item_delete_tag"
            android:layout_marginLeft="11dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginTop="20dp">
                
                <View
                    android:layout_width="3dp"
                    android:layout_height="24dp"
                    android:background="@color/colorBlue"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/mine_person_service_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginLeft="9dp"
                    android:text="张三"/>
                
                <TextView
                    android:id="@+id/mine_person_service_item_status"
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorGreen"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="13dp"
                    android:text="已发布"/>
                
            </RelativeLayout>

            <TextView
                android:id="@+id/mine_person_service_item_first_feature"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/shape_demand_content_stage_background"
                android:text="软件开发"
                android:gravity="center"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"/>

            <LinearLayout
                android:id="@+id/mine_person_service_item_content_layout"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="13sp"
                    android:textColor="@color/colorBlack"
                    android:text="服务内容："/>

                <TextView
                    android:id="@+id/mine_person_service_item_content"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="13sp"
                    android:textColor="@color/colorBlack"
                    android:maxEms="20"
                    android:text="1、负责产品移动端、web端、pc端相关产..."/>

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>
