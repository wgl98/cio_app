<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/select_company_type_text_layout"
        android:layout_width="341dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal">
        
        <TextView
            android:id="@+id/select_company_type_text"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/select_tag"
            android:layout_width="17.13dp"
            android:layout_height="14.27dp"
            android:background="@mipmap/item_selected"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:visibility="invisible"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#66707070"
            android:layout_alignParentBottom="true"/>


    </RelativeLayout>

</LinearLayout>
